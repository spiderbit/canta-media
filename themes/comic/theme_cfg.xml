<!--
    ATMOSPHERE
        Adjust the background and sky colors.
-->
    <atmosphere>
        <background_color r="255" g="255" b="255" a="255" />
        <sky_color r="0" g="0" b="255" a="255" />
        <clouds name="cloud.png" />
    </atmosphere>
<!--
    BAR COLORS
        Define the colors of the sing and song bars in singscreen.
-->
    <bars>
	    <singbar>
	        <color r="232" g="153" b="58" a="255" />
	        <formula r="-20" g="-10" b="-10" a="-20" />
	    </singbar>
	    <posbar>
	        <color r="232" g="153" b="58" a="170" />
	    </posbar>
	    <songbar type="normal">
	        <color r="130" g="130" b="130" a="170" />
	    </songbar>
	    <songbar type="special">
	        <color r="0" g="255" b="0" a="150" />
	    </songbar>
	    <songbar type="freestyle">
	        <color r="0" g="255" b="0" a="150" />
	    </songbar>
	</bars>
<!--
    BORDERED BOXES
        Define background and border colors (and border width)
        for the bordered boxes of the GUI.
-->
    <box>
        <border>
            <color r="102" g="0" b="102" a="255" />
            <width value="7" />
        </border>
        <background>
            <color r="5" g="170" b="0" a="220" />
        </background>
    </box>
<!--
    BUTTONS
        Define background and border colors for the buttons.
        Buttons have two states (on-focus and off-focus).
-->
    <button>
        <background type="on_focus">
            <color r="30" g="30" b="30" a="160" />
        </background>
        <background type="off_focus">
            <color r="51" g="102" b="153" a="225" />
        </background>
        <border type="on_focus">
            <color r="0" g="125" b="188" a="255" />
            <width value="7" />
        </border>
        <border type="off_focus">
            <color r="255" g="0" b="255" a="0" />
        </border>
    </button>
<!--
    FONTS
        Define some fonts by filename and colors.
-->
    <font>
        <p>
            <file name="StayPuft.ttf" />
            <color r="255" g="255" b="255" a="255" />
        </p>
        <h1>
            <file name="StayPuft.ttf" />
            <color r="102" g="0" b="102" a="255" />
        </h1>
        <lyrics type="to_sing">
            <file name="StayPuft.ttf" />
            <color r="255" g="255" b="255" a="255" />
        </lyrics>
        <lyrics type="special">
            <file name="StayPuft.ttf" />
            <color r="0" g="255" b="0" a="255" />
        </lyrics>
        <lyrics type="active">
            <file name="StayPuft.ttf" />
            <color r="115" g="12" b="217" a="255" />
        </lyrics>
        <lyrics type="done">
            <file name="StayPuft.ttf" />
            <color r="255" g="255" b="0" a="255" />
        </lyrics>
        <button type="on_focus">
            <file name="StayPuft.ttf" />
            <color r="255" g="255" b="255" a="255" />
        </button>
        <button type="off_focus">
            <file name="StayPuft.ttf" />
            <color r="255" g="200" b="0" a="255" />
        </button>
    </font>
<!--
    3D PANELS
        Define a panel in 3D space and give it a color or texture.
-->
    <panel name="flowers">
        <position x="6" y="-20" z="-20.5" />
        <scale x="30" y="20" z="1" />
        <rotation x="0" y="0" z="0" />
        <color r="255" g="255" b="255" a="255" />
        <texture name="pasture.png" />

    </panel>
    <panel name="flowers">
        <position x="-10" y="-20" z="-19.5" />
        <scale x="30" y="20" z="1" />
        <rotation x="0" y="0" z="0" />
        <color r="255" g="255" b="255" a="255" />
        <texture name="pasture.png" />

    </panel>
    <panel name="flowers">
        <position x="16" y="-20" z="-40.5" />
        <scale x="30" y="20" z="1" />
        <rotation x="0" y="0" z="0" />
        <color r="255" g="255" b="255" a="255" />
        <texture name="pasture.png" />

    </panel>
    <panel name="flowers">
        <position x="-16" y="-20" z="-39.5" />
        <scale x="30" y="20" z="1" />
        <rotation x="0" y="0" z="0" />
        <color r="255" g="255" b="255" a="255" />
        <texture name="pasture.png" />
    </panel>
<!--
    3D MODELS
        Load a Blender 3D model with the name "logo.blend" located in
        media/blender and assign properties like position, etc.
-->
    <model name="logo">
        <position x="0" y="3.5" z="5" />
        <scale x="1" y="1" z="1" />
        <rotation x="0" y="0" z="0" />
        <shadow value="on" />
        <cellshading value="off" />
    </model>
    <model name="grass">
        <position x="-7" y="-5" z="4" />
        <scale x="0.5" y="0.5" z="0.5" />
        <rotation x="0" y="0" z="0" />
        <shadow value="on" />
        <cellshading value="on" />
    </model>
    <model name="grass">
        <position x="0" y="-5" z="3" />
        <scale x="0.5" y="0.5" z="0.5" />
        <rotation x="0" y="0" z="0" />
        <shadow value="on" />

        <cellshading value="on" />
    </model>
    <model name="grass">
        <position x="7" y="-5" z="4" />
        <scale x="0.5" y="0.5" z="0.5" />
        <rotation x="0" y="0" z="0" />
        <shadow value="on" />
        <cellshading value="on" />
    </model>
    <model name="sun">
        <position x="17" y="7" z="-7.5" />
        <scale x="2" y="2" z="2" />
        <rotation x="0" y="0" z="0" />
        <shadow value="on" />
<!--
        Optional element "animation":
        Set this to "x", "y" or "z" to apply a rotation
        to the model.
-->
	<animation value="z" />
        <cellshading value="on" />
    </model>
</theme>
