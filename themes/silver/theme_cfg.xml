<!--
    ATMOSPHERE
        Adjust the background and sky colors.
-->
    <atmosphere>
        <background_color r="255" g="255" b="255" a="255" />
        <sky_color r="55" g="55" b="55" a="255" />
    </atmosphere>
<!--
    BAR COLORS
-->
    <bars>
	    <posbar>
	        <color r="0" g="178" b="255" a="155" />
	    </posbar>
	    <singbar>
	        <color r="12" g="244" b="12" a="175" />
	        <formula r="20" g="-50" b="20" a="-10" />
	    </singbar>
	    <songbar type="normal">
	        <color r="100" g="100" b="100" a="135" />
	    </songbar>
	    <songbar type="special">
	        <color r="70" g="70" b="70" a="255" />
	    </songbar>
	    <songbar type="freestyle">
	        <color r="120" g="120" b="120" a="135" />
	    </songbar>
	</bars>
<!--
    BORDERED BOXES
        Define background and border colors (and border width)
        for the bordered boxes of the GUI.
-->
    <box>
        <border>
            <color r="0" g="0" b="0" a="255" />
            <width value="2" />
        </border>
        <background>
            <color r="240" g="240" b="240" a="200" />
        </background>
    </box>
<!--
    BUTTONS
        Define background and border colors for the buttons.
        Buttons have two states (on-focus and off-focus).
-->
    <button>
        <background type="on_focus">
            <color r="60" g="60" b="60" a="255" />
        </background>
        <background type="off_focus">
            <color r="220" g="220" b="220" a="180" />
        </background>
        <border type="on_focus">
            <color r="255" g="255" b="255" a="255" />
            <width value="2" />
        </border>
        <border type="off_focus">
            <color r="0" g="0" b="0" a="255" />
            <width value="2" />
        </border>
    </button>
<!--
    FONTS
        Define some fonts by filename and colors.
-->
    <font>
        <p>
            <file name="FreeSans.ttf" />
            <color r="0" g="0" b="0" a="255" />
        </p>
        <h1>
            <file name="FreeSans.ttf" />
            <color r="50" g="50" b="50" a="255" />
        </h1>
        <lyrics type="to_sing">
            <file name="FreeSans.ttf" />
            <color r="80" g="80" b="80" a="255" />
        </lyrics>
        <lyrics type="special">
            <file name="FreeSans.ttf" />
            <color r="80" g="80" b="80" a="255" />
        </lyrics>
        <lyrics type="active">
            <file name="FreeSans.ttf" />
            <color r="0" g="178" b="255" a="255" />
        </lyrics>
        <lyrics type="done">
            <file name="FreeSans.ttf" />
            <color r="0" g="0" b="0" a="255" />
        </lyrics>
        <button type="on_focus">
            <file name="FreeSans.ttf" />
            <color r="255" g="255" b="255" a="255" />
        </button>
        <button type="off_focus">
            <file name="FreeSans.ttf" />
            <color r="0" g="0" b="0" a="255" />
        </button>
    </font>
<!--
    3D MODELS WITH SKELETAL ANIMATION
        Load a Blender 3D model with the name "logo_C.blend" located in
        media/blender and assign properties like position, rotation, etc.
        Assign one action to the model. Actions are defined and named in
        Blender. Make shure you use same name here.
-->
    <animodel name='logo_C'>
        <position x='7.2' y='7.7' z='-2.0' />
        <scale x='0.8' y='0.8' z='0.8' />
        <rotation x='0.0' y='0.0' z='0.0' />
        <shadow value='on' />
        <action name='Action_Zoom_Sing' />
    </animodel>
    <animodel name='logo_A0'>
        <position x='8.6' y='7.7' z='-2.0' />
        <scale x='0.8' y='0.8' z='0.8' />
        <rotation x='0.0' y='0.0' z='0.0' />
        <shadow value='on' />
        <action name='Action_Zoom_Wobble' />
    </animodel>
    <animodel name='logo_N'>
        <position x='9.9' y='7.7' z='-2.0' />
        <scale x='0.8' y='0.8' z='0.8' />
        <rotation x='0.0' y='0.0' z='0.0' />
        <shadow value='on' />
        <action name='Action_Zoom_Wobble' />
    </animodel>
    <animodel name='logo_T'>
        <position x='10.9' y='7.7' z='-2.0' />
        <scale x='0.8' y='0.8' z='0.8' />
        <rotation x='0.0' y='0.0' z='0.0' />
        <shadow value='on' />
        <action name='Action_Zoom_Wobble' />
    </animodel>
    <animodel name='logo_A1'>
        <position x='12.2' y='7.7' z='-2.0' />
        <scale x='0.8' y='0.8' z='0.8' />
        <rotation x='0.0' y='0.0' z='0.0' />
        <shadow value='on' />
        <action name='Action_Zoom_Wobble' />
    </animodel>
<!--
    3D MODELS
        Load a Blender 3D model with the name "mic.blend" located in
        media/blender and assign properties like position, etc.
-->
    <model name="mic">
        <position x="13" y="-10.5" z="-7" />
        <scale x="0.56" y="0.56" z="0.56" />
        <rotation x="0" y="0" z="0" />
        <shadow value="off" />
        <cellshading value="off" />
		<animation value="y" />
	</model>
    <model name="mic_bottom">
        <position x="13" y="-10.5" z="-7" />
        <scale x="0.56" y="0.56" z="0.56" />
        <rotation x="0" y="0" z="0" />
        <shadow value="off" />
        <cellshading value="off" />
		<animation value="y" />
		<envmap value="env_map.png" />
		</model>
    <model name="mic_stand">
        <position x="13" y="-10.5" z="-7" />
        <scale x="0.56" y="0.56" z="0.56" />
        <rotation x="0" y="0" z="0" />
        <shadow value="off" />
        <cellshading value="off" />
		<animation value="y" />
    </model>
    <model name="mic_stand_screw">
        <position x="13" y="-10.5" z="-7" />
        <scale x="0.56" y="0.56" z="0.56" />
        <rotation x="0" y="0" z="0" />
        <shadow value="off" />
        <cellshading value="off" />
		<animation value="y" />
		<envmap value="env_map.png" />
	</model>
</theme>
