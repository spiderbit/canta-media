<!--
    3D PANELS
        Define a plane in 3D space and give it a color or texture.
-->
    <panel name="groovy">
        <position x="0" y="0" z="-9" />
        <scale x="30" y="30" z="1" />
        <rotation x="0" y="0" z="0" />
        <color r="255" g="255" b="255" a="205" />
        <texture name="sky.png" />
<!--
        Optional element "animation":
        Set this to "x", "y" or "z" to apply a rotation
        to the model.
-->
        <animation value="z" />
