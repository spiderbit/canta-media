<!--
    ATMOSPHERE
        Adjust the background and sky colors.
-->
    <atmosphere>
        <background_color r="20" g="0" b="0" a="255" />
        <sky_color r="252" g="218" b="132" a="255" />
        <clouds name="sky.png" />
    </atmosphere>
<!--
    BAR COLORS
        Define the colors of the sing and song bars in singscreen.
-->
    <bars>
	    <singbar>
	        <color r="217" g="31" b="180" a="200" />
	        <formula r="20" g="20" b="20" a="-10" />
	    </singbar>
	    <posbar>
	        <color r="232" g="153" b="58" a="255" />
	    </posbar>
	    <songbar type="normal">
	        <color r="0" g="178" b="255" a="155" />
	    </songbar>
	    <songbar type="special">
	        <color r="15" g="99" b="12" a="255" />
	    </songbar>
	    <songbar type="freestyle">
	        <color r="255" g="99" b="12" a="255" />
	    </songbar>
	</bars>
<!--
    BORDERED BOXES
        Define background and border colors (and border width)
        for the bordered boxes of the GUI.
-->
    <box>
        <border>
            <color r="232" g="153" b="58" a="255" />
            <width value="3" />
        </border>
        <background>
            <color r="40" g="30" b="20" a="220" />
        </background>
    </box>
<!--
    BUTTONS
        Define background and border colors for the buttons.
        Buttons have two states (on-focus and off-focus).
-->
    <button>
        <background type="on_focus">
            <color r="20" g="0" b="0" a="200" />
        </background>
        <background type="off_focus">
            <color r="20" g="0" b="0" a="240" />
        </background>
        <border type="on_focus">
            <color r="232" g="153" b="58" a="255" />
            <width value="3" />
        </border>
        <border type="off_focus">
            <color r="255" g="255" b="255" a="0" />
            <width value="3" />
        </border>
    </button>
<!--
    FONTS
        Define some fonts by filename and colors.
-->
    <font>
        <p>
            <file name="StayPuft.ttf" />
            <color r="255" g="255" b="255" a="255" />
        </p>
        <h1>
            <file name="StayPuft.ttf" />
            <color r="255" g="255" b="255" a="255" />
        </h1>
        <lyrics type="to_sing">
            <file name="StayPuft.ttf" />
            <color r="0" g="178" b="255" a="155" />
        </lyrics>
        <lyrics type="special">
            <file name="StayPuft.ttf" />
            <color r="0" g="255" b="0" a="255" />
        </lyrics>
        <lyrics type="active">
            <file name="StayPuft.ttf" />
            <color r="232" g="153" b="58" a="255" />
        </lyrics>
        <lyrics type="done">
            <file name="StayPuft.ttf" />
            <color r="255" g="255" b="255" a="255" />
        </lyrics>
        <button type="on_focus">
            <file name="StayPuft.ttf" />
            <color r="255" g="255" b="255" a="255" />
        </button>
        <button type="off_focus">
            <file name="StayPuft.ttf" />
            <color r="232" g="153" b="58" a="255" />
        </button>
    </font>
<!--
