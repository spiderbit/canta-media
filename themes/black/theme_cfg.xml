<!--
    ATMOSPHERE
        Adjust the background and sky colors.
-->
    <atmosphere>
        <background_color r="0" g="0" b="0" a="255" />
        <sky_color r="60" g="60" b="60" a="255" />
    </atmosphere>
<!--
    BAR COLORS
        Define the colors of the sing and song bars in singscreen.
-->
    <bars>
	    <singbar>
	        <color r="255" g="255" b="255" a="255" />
	        <formula r="20" g="20" b="20" a="-10" />
	    </singbar>
	    <posbar>
	        <color r="200" g="200" b="200" a="100" />
	    </posbar>
	    <songbar type="normal">
	        <color r="100" g="100" b="100" a="155" />
	    </songbar>
	    <songbar type="special">
	        <color r="80" g="80" b="80" a="155" />
	    </songbar>
	    <songbar type="freestyle">
	        <color r="50" g="50" b="50" a="155" />
	    </songbar>
	</bars>
<!--
    BORDERED BOXES
        Define background and border colors (and border width)
        for the bordered boxes of the GUI.
-->
    <box>
        <border>
            <color r="255" g="255" b="255" a="255" />
            <width value="1" />
        </border>
        <background>
            <color r="100" g="100" b="100" a="200" />
        </background>
    </box>
<!--
    BUTTONS
        Define background and border colors for the buttons.
        Buttons have two states (on-focus and off-focus).
-->
    <button>
        <background type="on_focus">
            <color r="60" g="60" b="60" a="155" />
        </background>
        <background type="off_focus">
            <color r="100" g="100" b="100" a="200" />
        </background>
        <border type="on_focus">
            <color r="255" g="255" b="255" a="255" />
            <width value="2" />
        </border>
        <border type="off_focus">
            <color r="100" g="100" b="100" a="255" />
            <width value="1" />
        </border>
    </button>
<!--
    FONTS
        Define some fonts by filename and colors.
-->
    <font>
        <p>
            <file name="FreeMono.ttf" />
            <color r="255" g="255" b="255" a="255" />
        </p>
        <h1>
            <file name="FreeMono.ttf" />
            <color r="255" g="255" b="255" a="255" />
        </h1>
        <lyrics type="to_sing">
            <file name="FreeMono.ttf" />
            <color r="0" g="0" b="0" a="255" />
        </lyrics>
        <lyrics type="special">
            <file name="FreeMono.ttf" />
            <color r="80" g="80" b="80" a="255" />
        </lyrics>
        <lyrics type="active">
            <file name="FreeMono.ttf" />
            <color r="180" g="180" b="180" a="255" />
        </lyrics>
        <lyrics type="done">
            <file name="FreeMono.ttf" />
            <color r="255" g="255" b="255" a="255" />
        </lyrics>
        <button type="on_focus">
            <file name="FreeMono.ttf" />
            <color r="255" g="255" b="255" a="255" />
        </button>
        <button type="off_focus">
            <file name="FreeMono.ttf" />
            <color r="0" g="0" b="0" a="255" />
        </button>
    </font>
</theme>
